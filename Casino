def dinero_dinero_dinero():

    empate = 0

    if punt_total_j1 == punt_total_j2:
        print('\nLA PUNTUACION DE AMBOS JUGADORES ES IGUAL, POR LO TANTO HAY EMPATE')
        print('Cada jugador recupera su apuesta inicial correspondiente')
        empate = 1
    elif punt_total_j1 > punt_total_j2:
        print('\nEL JUGADOR 1 GANA LA PARTIDA!!')
    else:
        print('\nEL JUGADOR 2 GANA LA PARTIDA!!')



    if empate != 1:
        if apuesta <= 2000:
            gan_casino = (apuesta * 15) / 100
            apuesta = apuesta - gan_casino
            print('\nEl casino cobrará una comisión del 15 por ciento, por lo tanto le corresponderá: ',gan_casino,'Pesos.')
            print('El jugador Ganador cobrará:', apuesta,'Pesos.')
        else:
            gan_casino = (apuesta * 25) / 100
            apuesta = apuesta - gan_casino
            print('\nEl casino cobrará una comisión del 25 por ciento, por lo tanto le corresponderá: ',gan_casino,'Pesos.')
            print('El jugador Ganador cobrará:', apuesta,'Pesos.')
    else:
        print('Al ser un empate entre ambos jugadores el casino no cobrará comisiñon')



#script principal
apuesta=float(input('Ingrese el monto de la apuesta acordado por ambos jugadores: '))
print('-El Jugador 1 comienza jugando-')

jugador_1()
jugador_2()
dinero_dinero_dinero()
